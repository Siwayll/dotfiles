[alias]
    # shortcut
	st = status -bs
	co = checkout
	sw = switch
	br = branch
	ci = commit
	d = diff
	p = push
	a = add
    # manipulation
	unstage = reset HEAD --
	pa = push --all
	maj = pull --ff-only
	fa = fetch -pPft
	ua = !git fa && git maj
    speed-amend=commit --no-edit --amend
    # view
    ## log
	last = log -1 HEAD
	lop = log --graph --all --oneline --decorate
	lol = "log --pretty=format:'%C(#FBF1C7)%h %C(#BDAE93)%ad %C(#D65D0E)â†’%C(auto)% D %Creset%s' --date=human --graph --all"
    pn = !git log --pretty='format: - %s' --no-merges $(git describe --abbrev=0 --tags)..HEAD
    ## diff
	dc = diff --cached
	dl = diff --name-only
[core]
	editor = nvim
	excludesfile = ~/.config/git/ignore
	fileMode = false
[gpg]
	program = gpg2

[color]
	branch = true

[color "branch"]
	local = "#fbf1c7"
	remote = "#fbf1c7"

[color "decorate"]
    head = "#badf30" bold
    branch = green bold
    remoteBranch = blue
	stash = green
    tag = yellow bold


[includeIf "gitdir:~/projects/"]
    path = ~/.config/git/author/bedrock

[includeIf "gitdir:~/Perso/"]
    path = ~/.config/git/author/perso

