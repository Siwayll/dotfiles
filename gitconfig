[alias]
    # shortcut
	st = status -bs
	co = checkout
	br = branch
	ci = commit
	d = diff
	p = push
	a = add
    # manipulation
	unstage = reset HEAD --
	pa = push --all
	maj = pull --ff-only
	fa = fetch -pft
	ua = !git fa && git maj
    # view
    ## log
	last = log -1 HEAD
	lop = log --graph --all --oneline --decorate
	lol = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short
    pn = !git log --pretty='format: - %s' --no-merges $(git describe --abbrev=0 --tags)..HEAD
    ## diff
	dc = diff --cached
	dl = diff --name-only
[core]
	editor = nvim
	excludesfile = ~/.config/git/ignore
	fileMode = false
[gpg]
	program = gpg2

[includeIf "gitdir:~/projects/"]
    path = ~/.config/git/author/m6

[includeIf "gitdir:~/Perso/"]
    path = ~/.config/git/author/perso
